<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:rippleColor="@color/primary_light"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- Active Badge (Top Right) -->
            <TextView
                android:id="@+id/tvActiveBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/badge_active"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/shape_badge"
                android:backgroundTint="@color/success_bg"
                android:textColor="@color/success"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Icon (Centered Top) -->
            <ImageView
                android:id="@+id/ivStoreIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_store"
                app:tint="@color/black"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@id/tvStoreName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preview_store_name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/ivStoreIcon"
                app:layout_constraintBottom_toTopOf="@id/tvStoreAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Address (Centered Bottom) -->
            <TextView
                android:id="@+id/tvStoreAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preview_store_address"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvStoreName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvStoreLocation"/>

             <!-- Location (Bottom of Card) -->
            <TextView
                android:id="@+id/tvStoreLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preview_store_distance"
                android:textSize="10sp"
                android:textColor="@color/text_tertiary"
                android:gravity="center"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tvStoreAddress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
